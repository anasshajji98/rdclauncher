<Window x:Class="msrdcui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:msrdcui"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="{Binding WindowTitle}" ResizeMode="CanMinimize" Width="500" Height="310" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Text="Enter the remote computer name and remote port number. The others are optional."/>

        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Target="{Binding ElementName=RemoteComputer}" Content="_Computer:"/>
        <TextBox Name="RemoteComputer" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Padding="4" Text="{Binding RemoteComputer, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Target="{Binding ElementName=RemotePort}" Content="_Port:"/>
        <TextBox Name="RemotePort" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Padding="4" Text="{Binding PortNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Target="{Binding ElementName=WindowTitle}" Content="_Window title:"/>
        <TextBox Name="WindowTitle" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Padding="4" Text="{Binding RdcWindowTitle}"/>

        <WrapPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
            <CheckBox Margin="4,4,12,4" Content="Fit _session to window" IsChecked="{Binding IsFitSessionToWindowEnabled}"/>
            <CheckBox Margin="4,4,12,4" Content="Update the _resolution on resize" IsChecked="{Binding IsUpdateResolutionOnResizeEnabled}"/>
            <CheckBox Margin="4,4,12,4" Content="_Full screen" IsChecked="{Binding IsFullScreenEnabled}"/>
        </WrapPanel>
        
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom">
            <Hyperlink Command="{Binding OpenAboutThisAppUriCommand}">About this app</Hyperlink>
        </TextBlock>

        <Button Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="30,12" IsDefault="True" Content="Connect" Command="{Binding ConnectCommand}"/>
    </Grid>
</Window>
